{
  "name": "rollup-plugin-htaccess",
  "version": "0.12.0",
  "description": "A rollup/vite plugin to generate .htaccess files",
  "keywords": [
    "rollup-plugin",
    "htaccess",
    "apache"
  ],
  "homepage": "https://github.com/marekdedic/rollup-plugin-htaccess",
  "bugs": {
    "url": "https://github.com/marekdedic/rollup-plugin-htaccess/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marekdedic/rollup-plugin-htaccess.git"
  },
  "license": "MIT",
  "author": "Marek Dědič",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/rollup-plugin-htaccess.js"
    }
  },
  "module": "dist/rollup-plugin-htaccess.js",
  "types": "dist/rollup-plugin-htaccess.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:rollup && npm run build:api-extractor",
    "postbuild": "rimraf dist/types",
    "build:api-extractor": "api-extractor run",
    "build:rollup": "rollup -c",
    "clean": "rimraf dist/*",
    "lint": "run-p -c --aggregate-output lint:*",
    "lint:attw": "attw --pack",
    "lint:eslint": "eslint",
    "prepack": "npm run build",
    "start": "rollup -cw",
    "pretest": "tsc --project test.tsconfig.json",
    "test": "vitest",
    "test-coverage": "vitest run --coverage"
  },
  "dependencies": {
    "domutils": "^3.1.0",
    "glob": "^13.0.0",
    "htmlparser2": "^10.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.0",
    "@eslint/js": "^9.9.1",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.0.0",
    "@microsoft/api-extractor": "^7.47.2",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/node": "^25.0.2",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/eslint-plugin": "^1.6.7",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-package-json": "^0.89.1",
    "eslint-plugin-perfectionist": "^5.0.0",
    "eslint-plugin-prefer-arrow-functions": "^3.4.0 <3.10",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.18.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.2.0",
    "vite": "^7.0.0",
    "vitest": "^4.0.4"
  },
  "peerDependencies": {
    "rollup": "^3.29.4 || ^4.0.0",
    "vite": "^4.5.14 || ^5.4.19 || ^6.3.5 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "rollup": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  },
  "engines": {
    "node": "^20.0.0 || ^22.0.0 || ^24.0.0",
    "npm": ">=8.0.0"
  }
}
