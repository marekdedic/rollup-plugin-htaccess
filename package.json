{
  "name": "rollup-plugin-htaccess",
  "version": "0.1.0",
  "description": "A rollup/vite plugin to generate .htaccess files",
  "keywords": [
    "rollup-plugin",
    "htaccess",
    "apache"
  ],
  "homepage": "https://github.com/marekdedic/rollup-plugin-htaccess",
  "bugs": {
    "url": "https://github.com/marekdedic/rollup-plugin-htaccess/issues"
  },
  "license": "MIT",
  "author": "Marek Dědič",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marekdedic/rollup-plugin-htaccess.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "rollup -c",
    "start": "rollup -cw",
    "lint:eslint": "eslint --color 'src/**/*.ts' 'rollup.config.js'",
    "lint:typecheck": "tsc --noEmit",
    "lint": "run-p -c --aggregate-output lint:*"
  },
  "peerDependencies": {
    "rollup": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-prefer-arrow-functions": "^3.3.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.3.3"
  }
}
